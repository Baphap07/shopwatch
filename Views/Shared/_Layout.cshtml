@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShowWatch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/sitee.css" />
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark my-2">
            <a class="navbar-brand" href="~/">
                <img src="~/img/asd.jpg" alt="Logo" class="rounded-circle" style="width:40px; height:40px">
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainMenu">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Create">Create</a>
                    </li>
                  

                        
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Role" asp-action="Index">Role</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Index">User</a>
                            </li>
                        
                        
                    

                </ul>
                <ul class="navbar-nav ml-auto">
                   
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" style="width:auto" class="btn btn-link test-light">
                                    Logout @User.Identity.Name
                                </button>
                            </form>
                        </li>
                   
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    
                </ul>

            </div>


        </nav>
        <div>
            @RenderBody()
        </div>

        <footer class="border-top card-footer text-muted text-center mt-2">
            <span>  &copy;Show Watch 2020</span>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>
