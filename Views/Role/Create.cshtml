@model CreateRoleViewModel
@{
    ViewBag.Title = "Create Role";

}
<h3>Role Managetment &gt; @ViewBag.Title</h3>

<form asp-controller="Role" asp-action="Create" method="post" class="mt-2">
    <div class="row form-groud">
        <div class="col-sm-2">
            <label asp-for="RoleName"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-groud">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-danger">Create</button>
            <a asp-controller="Role" asp-action="Index" class="btn btn-dark">Back</a>
        </div>

    </div>




</form>
